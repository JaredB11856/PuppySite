<%= render '/shared/application_nav' %>

<% @mothers.each do |mother| %>
  <div class="row">
    <div class="col-md-4 image">
      <%= link_to (image_tag mother.main_image, class:'image'), mother_path(mother.id) %>
    </div>
    <div class="col-md-8 about">
      <p><%= mother.about %></p>
    </div>
  </div>
<% end %>