<p id="notice"><%= notice %></p>

<h1>Litters</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>About</th>
      <th>Main image</th>
      <th>Image one</th>
      <th>Image two</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @litters.each do |litter| %>
      <tr>
        <td><%= litter.date %></td>
        <td><%= litter.about %></td>
        <td><%= litter.main_image %></td>
        <td><%= litter.image_one %></td>
        <td><%= litter.image_two %></td>
        <td><%= link_to 'Show', litter %></td>
        <td><%= link_to 'Edit', edit_litter_path(litter) %></td>
        <td><%= link_to 'Destroy', litter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

